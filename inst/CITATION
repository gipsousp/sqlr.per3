citHeader("To cite sqlr.per3 in publications use:")

citEntry(
  entry       = "Unpublished",
  title       = paste0("sqlr.per3: ",
                       "an R package with the research compendium of the ",
                       "project: PER3 gene and circadian rhythms: ",
                       "a systematic quantitative literature review"),
  author      = personList(as.person("Juliana Viana Mendes"),
                           as.person("Daniel Vartanian"),
                           as.person("Ana Amelia Benedito-Silva"),
                           as.person("Mario Pedrazzoli")),
  year        = "2021",
  url         = paste0("https://gipsousp.github.io/sqlr.per3/"),
  textVersion = paste0("Mendes, J. V., Vartanian, D., ",
                       "Benedito-Silva, A. A., Pedrazzoli, M. (2021). ",
                       "sqlr.per3: ",
                       "an R package with the research compendium of the ",
                       "project: PER3 gene and circadian rhythms: ",
                       "a systematic quantitative literature review. ",
                       "Retrieved from https://gipsousp.github.io/",
                       "sqlr.per3/."),
  note        = "Lifecycle: experimental"
)
